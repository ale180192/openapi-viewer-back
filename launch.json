    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: test",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "justMyCode": false,
            "django": true,
            "args": [
                "test"
              ],
            "env": {
                "PYTHONPATH":  "${workspaceFolder}/myvenv/bin"
           },
        },
        {
            "name": "Python: Django",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "justMyCode": false,
            "django": true,
            "args": [
                "runserver",
                "8000",
                "--noreload",
                "--nothreading"
              ],
            "env": {
                "PYTHONPATH":  "${workspaceFolder}/myvenv/bin"
           },
        }
    ]
}